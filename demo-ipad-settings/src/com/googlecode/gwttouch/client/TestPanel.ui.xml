<!--       <gmw:TextFieldItem ui:field="one" placeholder="hohoho"/> -->
<!--       <gmw:TextFieldItem ui:field="two" text="something"/>	         -->
<!--       <gmw:TextFieldItem ui:field="three"/>	         -->
<!--     </gmw:TextFieldGroup> -->
<!-- </gmw:FormView> -->
							
							
							
							
							

						</g:HTMLPanel>
					</t:TouchPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 